process {
    cpus = 2
    memory = '4 GB'
}


profiles {
    slurm {
        process {
            executor = 'slurm'
            cpus = 1 // Default for Slurm runs
            memory = '32 GB' // Default for Slurm runs
    
            withName: PREPPAINTOR_splitlocus {
                cpus = 22
                memory = '60 GB' 
            }

            withName: LDCALCULATION_calculation {
                memory = '32 GB' 
            }

            withName: PAINTOR_run {
                memory = '60 GB'
            }

            withName: CANVIS_run {
                memory = '60 GB'
            }
        }
    }
    
    singularity {
        singularity.enabled = true
        singularity.autoMount = true
        process.container = './mainimage_0.1.sif'
    }
}

report {
    trace {
        overwrite = true
    }
}
